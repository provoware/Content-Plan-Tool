{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Provoware Events",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "date",
      "id",
      "status",
      "title"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "title": {
        "type": "string"
      },
      "date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "status": {
        "type": "string",
        "enum": [
          "planned",
          "productive",
          "done"
        ]
      },
      "platform": {
        "type": "string"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "notes": {
        "type": "string"
      },
      "start_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "end_date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "deadline": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "recurrence": {
        "type": "object",
        "properties": {
          "rrule": {
            "type": "string",
            "description": "RFC 5545 RRULE, z.B. FREQ=MONTHLY;INTERVAL=1;BYDAY=MO"
          },
          "freq": {
            "type": "string",
            "enum": [
              "DAILY",
              "WEEKLY",
              "MONTHLY",
              "YEARLY"
            ]
          },
          "interval": {
            "type": "integer",
            "minimum": 1,
            "default": 1
          },
          "byweekday": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "MO",
                "TU",
                "WE",
                "TH",
                "FR",
                "SA",
                "SU"
              ]
            }
          },
          "count": {
            "type": "integer",
            "minimum": 1
          },
          "until": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "additionalProperties": false
      }
    },
    "additionalProperties": true
  }
}